<script>
function CheckLogin(){

var username = document.getElementById("username").value;
var password = document.getElementById("password").value;
var companies = document.getElementById("companies").value;


$.ajax({
url: 'login.php',
type: 'POST',
data: { 
        'username': username,
        'password': password,
		'companies':companies
    },
success:function(data) {
	console.log(data)
	var output = data.split(",");
	att=output[1];
	if(output[0]=="OK"){
		document.location.href=output[1];
	}else{
		//error
		//attempts
		//alert(output[1]+' more attempts.');
	}
}	
});
}
function Register(){
	var username = document.getElementById("username").value;
	var password = document.getElementById("password").value;
	var companies = document.getElementById("companies").value;
	
	$.ajax({
	url: 'signin.php',
	type: 'POST',
	data: { 
        'username': username,
        'password': password,
		'companies':companies
    },
	success:function(data) {
	console.log(data)
	var output = data.split(",");
	att=output[1];
	if(output[0]=="OK"){
		document.location.href=output[1];
	}else{
		//error
		//attempts
		//alert(output[1]+' more attempts.');
	}
}	
});
	
}
</script>
<?php 
//Load Companies
$sql="SELECT distinct company from users order by company";
$companies="";
$result = mysqli_query($link,$sql) or die ("Query error: " . mysqli_error());
while ($row = mysqli_fetch_object($result)) {
    if($row->id==1){$selected=" SELECTED ";}else{$selected="";}
    $companies.="<option ".$selected." value='".$row->company."'>".$row->company."</option>";
}
?>
